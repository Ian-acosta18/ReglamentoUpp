<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:padding="24dp"
    app:behavior_peekHeight="400dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tv_quiz_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Quiz Rápido"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/upp_primary_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_quiz_pregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/upp_text_title"
        android:lineSpacingMultiplier="1.1"
        android:minHeight="60dp"
        tools:text="¿Cuál de las siguientes opciones es considerada una obligación del estudiante?" />

    <ProgressBar
        android:id="@+id/progress_bar_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/quiz_options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_opcion_a"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/game_button_default"
            android:textColor="@color/game_button_default_text"
            android:textStyle="bold"
            android:padding="12dp"
            tools:text="Opción A" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_opcion_b"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/game_button_default"
            android:textColor="@color/game_button_default_text"
            android:textStyle="bold"
            android:padding="12dp"
            tools:text="Opción B" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_opcion_c"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/game_button_default"
            android:textColor="@color/game_button_default_text"
            android:textStyle="bold"
            android:padding="12dp"
            tools:text="Opción C" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_quiz_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="¡Correcto!"
        tools:visibility="visible"
        tools:textColor="@color/game_success" />

</LinearLayout>