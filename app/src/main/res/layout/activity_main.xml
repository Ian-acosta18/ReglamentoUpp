<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/upp_bg"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/upp_primary_dark"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_header_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/mi_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Bienvenido"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/upp_text_on_primary"
                android:alpha="0.8"
                app:layout_constraintStart_toEndOf="@id/iv_header_icon"
                app:layout_constraintTop_toTopOf="@id/iv_header_icon"
                app:layout_constraintEnd_toStartOf="@id/btn_logout" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/upp_text_on_primary"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/iv_header_icon"
                app:layout_constraintTop_toBottomOf="@id/tv_welcome"
                app:layout_constraintEnd_toStartOf="@id/btn_logout"
                tools:text="Nombre de Usuario" />

            <Button
                android:id="@+id/btn_logout"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salir"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_puntaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/upp_accent"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puntaje Total"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_user_puntaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="1250 Puntos" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_niveles_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:text="Mapa de Misiones"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/upp_primary_dark"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_puntaje" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_niveles_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_jugar_derechos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                style="@style/Widget.App.MissionCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/ll_derechos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_derechos"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_derechos"
                        app:tint="@color/upp_primary" />

                    <TextView
                        android:id="@+id/tv_derechos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Nivel 1: Derechos"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/upp_text_title" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_jugar_obligaciones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                style="@style/Widget.App.MissionCard"
                app:cardBackgroundColor="@color/game_locked_bg"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_jugar_derechos">

                <LinearLayout
                    android:id="@+id/ll_obligaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_obligaciones"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_obligaciones"
                        app:tint="@color/game_locked" />

                    <TextView
                        android:id="@+id/tv_obligaciones"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Nivel 2: Obligaciones"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/game_locked" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/iv_lock_obligaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                app:tint="@color/game_locked"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"
                app:layout_constraintTop_toTopOf="@id/btn_jugar_obligaciones"
                app:layout_constraintBottom_toBottomOf="@id/btn_jugar_obligaciones"
                app:layout_constraintEnd_toEndOf="@id/btn_jugar_obligaciones" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_jugar_prohibiciones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                style="@style/Widget.App.MissionCard"
                app:cardBackgroundColor="@color/game_locked_bg"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_jugar_obligaciones">

                <LinearLayout
                    android:id="@+id/ll_prohibiciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_prohibiciones"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_prohibiciones"
                        app:tint="@color/game_locked" />

                    <TextView
                        android:id="@+id/tv_prohibiciones"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Nivel 3: Prohibiciones"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/game_locked" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/iv_lock_prohibiciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                app:tint="@color/game_locked"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"
                app:layout_constraintTop_toTopOf="@id/btn_jugar_prohibiciones"
                app:layout_constraintBottom_toBottomOf="@id/btn_jugar_prohibiciones"
                app:layout_constraintEnd_toEndOf="@id/btn_jugar_prohibiciones" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_jugar_sanciones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                style="@style/Widget.App.MissionCard"
                app:cardBackgroundColor="@color/game_locked_bg"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_jugar_prohibiciones">

                <LinearLayout
                    android:id="@+id/ll_sanciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_sanciones"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_sanciones"
                        app:tint="@color/game_locked" />

                    <TextView
                        android:id="@+id/tv_sanciones"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Nivel 4: Sanciones"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/game_locked" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/iv_lock_sanciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                app:tint="@color/game_locked"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"
                app:layout_constraintTop_toTopOf="@id/btn_jugar_sanciones"
                app:layout_constraintBottom_toBottomOf="@id/btn_jugar_sanciones"
                app:layout_constraintEnd_toEndOf="@id/btn_jugar_sanciones" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_jugar_reconocimientos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                style="@style/Widget.App.MissionCard"
                app:cardBackgroundColor="@color/game_locked_bg"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_jugar_sanciones">

                <LinearLayout
                    android:id="@+id/ll_reconocimientos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_reconocimientos"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_reconocimientos"
                        app:tint="@color/game_locked" />

                    <TextView
                        android:id="@+id/tv_reconocimientos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Nivel 5: Reconocimientos"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/game_locked" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/iv_lock_reconocimientos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                app:tint="@color/game_locked"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"
                app:layout_constraintTop_toTopOf="@id/btn_jugar_reconocimientos"
                app:layout_constraintBottom_toBottomOf="@id/btn_jugar_reconocimientos"
                app:layout_constraintEnd_toEndOf="@id/btn_jugar_reconocimientos" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>